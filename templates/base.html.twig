        <!-- STYLE CSS CUSTOM -->
        <link href="{{ asset("assets/css/custom.css") }}" rel="stylesheet" media="all">

        {% block stylesheets %} {% endblock %}
    </head>

    <body>
    <!-- Desktop Menu -->
    {% include 'includes/menu.html.twig' %}
    <div class="page-container">
        <!-- Top Navbar / Menu -->
        {%  include 'includes/top_navbar.html.twig' %}
        <div class="main-content">
            <div class="col-md-6 offset-md-3">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="sufee-alert alert with-close alert-{{ label }} alert-dismissible fade show">
                            {{ message | raw }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            {% block body %}{% endblock %}
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="{{ asset("assets/vendor/jquery-3.2.1.min.js") }}"></script>
    <!-- Bootstrap JS-->
    <script src="{{ asset("assets/vendor/bootstrap-4.1/popper.min.js") }}"></script>
    <script src="{{ asset("assets/vendor/bootstrap-4.1/bootstrap.min.js") }}"></script>

